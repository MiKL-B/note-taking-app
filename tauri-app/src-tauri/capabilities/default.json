{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:window:default",
    "core:window:allow-start-dragging",
    "core:window:allow-toggle-maximize",
    "core:window:allow-minimize",
    "core:window:allow-close",
    "core:webview:allow-create-webview-window",
    "core:event:allow-listen",
    "core:event:default",
    "core:path:allow-resolve-directory",
    "core:path:default",
    "opener:default",
    "opener:allow-open-url",
    "fs:default",
    "fs:allow-app-read",
    "fs:allow-app-write",
    "dialog:default",
    "fs:default",
    "fs:read-all",
    "fs:write-all",
    "fs:allow-rename",
    "fs:allow-mkdir",
    "fs:allow-exists",
    "fs:allow-watch",
    "fs:read-dirs",
    {
      "identifier": "fs:scope",
      "allow": [
        "**/*"
      ]
    },
    "sql:default",
    "sql:allow-execute",
    "sql:default"
  ]
}